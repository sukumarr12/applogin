properties([pipelineTriggers([githubPush()])])
pipeline {
    agent {label "sr777"}

    stages {
        
        stage('git clone project url') {
            steps {
                git url: 'https://github.com/sukumarr12/applogin.git'        
            }
        }

        stage('git clone ansible url')
            steps {
                git url: "https://github.com/sukumarr12/ansible1"
                sh "ls -all"
            }

        stage('build') {
            steps {
                sh "mvn clean install"
            }
        }

        stage('test') {
            steps {
                echo "this is for testing"
            }
        }

        stage('publish') {
            steps {
                script {
                    try {
                        rtUpload (
                            serverId: 'myjfrog',
                            spec: '''
                                    {
                                        "files": [
                                            {
                                                "pattern": "target/*.war",
                                                "target": "firstrepo/"
                                            }
                                        ]
                                    }
                            ''',
                            buildName: "${JOB_NAME}",
                            buildNumber: "${BUILD_NUMBER}"
                        )
                    }
                    catch(err) {
                        printIn "unable to push the artifact kindly check the configuration"
                        printIn err.getMessage()
                    }
                }
            }
        }

        stage('deploy') {
            steps {
                sh "ansible-playbook -i tom-host cd.yml"
            }
        }
    }

    post {
        always {
            /*emailext body: '''this is status of

job:"$(JOB_NAME)"
url:"$(BUILD_URL)"''', subject: 'status of "$(JOB_NAME)"', to: 'devops.sukumar@gmail.com'
       } */
       echo "post action"
       }
    }
}
